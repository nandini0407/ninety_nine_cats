<h2>Request to rent a cat</h2>

<form action= "<%= cat_rental_requests_url %>" method="post">
  <label for="cat_id">Choose a Cat </label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>--Please Select--</option>
    <% @cats.each do |cat| %>
      <option value= "<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>
  <br>

  <label for="start-date">Start Date</label>
  <input id="start-date" type="date" name="cat_rental_request[start_date]">

  <br>
  <br>

  <label for="end-date">End Date</label>
  <input id="end-date" type="date" name="cat_rental_request[end_date]">

  <br>
  <br>

  <%= button_to 'Place Request', cat_rental_requests_url %>
</form>
